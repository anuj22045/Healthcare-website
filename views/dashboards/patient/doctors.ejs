<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Doctor List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-sky-300 min-h-screen">

    <div class="flex">

        <%- include('../../partials/patientSidebar') %>


            <div class="flex-1 p-8">

                <div class="flex items-center justify-between mb-6">
                    <h1 class="text-4xl text-purple-900 font-bold">MediCare</h1>
                    <div class="flex items-center space-x-4">
                        <input type="text" placeholder="Search" class="px-4 py-1 rounded-md" />
                        <img src="/images/Doctor_logo.png" class="w-10 h-10 rounded-full" />
                    </div>
                </div>


                <h2 class="text-2xl text-center font-bold text-purple-900 mb-4">DOCTOR LIST</h2>


                <% if (doctors.length===0) { %>
                    <p class="text-red-500 text-center text-lg">No doctor Approved by Admin yet</p>
                    <% } else { %>
                        <% doctors.forEach(doctor=> { %>
                            <div
                                class="bg-blue-900 text-white p-6 rounded-lg shadow-lg flex flex-col items-center text-center">
                                <img src="/images/Doctor_logo.png" class="w-24 h-24 rounded-full mb-4" alt="Doctor" />
                                <h3 class="text-xl font-semibold mb-1">
                                    <%= doctor.name %>
                                </h3>
                                <p class="text-sm mb-2">Specialist</p>
                                <p class="text-xs mb-3">
                                    <%= doctor.description || "Experienced and compassionate specialist." %>
                                </p>
                                <div class="flex justify-center mb-3">
                                    <% for (let i=0; i < 5; i++) { %>
                                        <img src="/images/star.png" class="w-5 h-5" />
                                        <% } %>
                                </div>
                                <button
                                    class="bg-purple-500 hover:bg-purple-600 px-4 py-2 rounded flex items-center space-x-2">
                                    <span>Request Prescription</span>
                                    <img src="/images/request_icon.png" class="w-4 h-4" />
                                </button>
                            </div>
                            <% }) %>
                                <% } %>

            </div>
    </div>

</body>

</html>