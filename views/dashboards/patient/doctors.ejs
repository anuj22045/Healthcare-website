<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Doctor List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-sky-300 min-h-screen">

    <div class="flex">
        <!-- Sidebar Include -->
        <%- include('../../partials/patientSidebar') %>

            <!-- Main Content -->
            <div class="flex-1 p-8">
                <!-- Header -->
                <div class="flex items-center justify-between mb-6">
                    <h1 class="text-4xl text-white font-bold">Medi Care</h1>
                    <div class="flex items-center space-x-4">
                        <input type="text" placeholder="Search" class="px-4 py-1 rounded-md" />
                        <img src="/images/profile_avatar.png" class="w-10 h-10 rounded-full" />
                    </div>
                </div>

                <!-- Page Title -->
                <h2 class="text-2xl text-center font-bold text-white mb-4">DOCTOR LIST</h2>

                <!-- Doctor Cards -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% for (let i=0; i < 6; i++) { %>
                        <div
                            class="bg-blue-900 text-white p-6 rounded-lg shadow-lg flex flex-col items-center text-center">
                            <img src="/images/doctor_avatar.png" class="w-24 h-24 rounded-full mb-4" alt="Doctor" />
                            <h3 class="text-xl font-semibold mb-1">Dr. XYZ</h3>
                            <p class="text-sm mb-2">H.O.D. Surgery</p>
                            <p class="text-xs mb-3">
                                Dr. XYZ is an expert surgeon specializing in heart surgery known for his precision,
                                expertise, and compassionate care.
                            </p>
                            <div class="flex justify-center mb-3">
                                <img src="/images/star.png" class="w-5 h-5" />
                                <img src="/images/star.png" class="w-5 h-5" />
                                <img src="/images/star.png" class="w-5 h-5" />
                                <img src="/images/star.png" class="w-5 h-5" />
                                <img src="/images/star.png" class="w-5 h-5" />
                            </div>
                            <button
                                class="bg-purple-500 hover:bg-purple-600 px-4 py-2 rounded flex items-center space-x-2">
                                <span>Request Prescription</span>
                                <img src="/images/request_icon.png" class="w-4 h-4" />
                            </button>
                        </div>
                        <% } %>
                </div>
            </div>
    </div>

</body>

</html>