<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Settings</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-sky-300 min-h-screen flex">
    <!-- Sidebar -->
    <%- include('../../partials/patientSidebar') %>

        <!-- Main Content -->
        <div class="flex-1 px-10 py-8">
            <!-- Header -->
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-4xl font-bold text-white">Cure Smart</h1>
                <div class="flex items-center gap-4">
                    <input type="text" placeholder="Search" class="px-4 py-1 rounded-md text-sm" />
                    <img src="/images/profile_avatar.png" class="w-10 h-10 rounded-full" />
                </div>
            </div>

            <!-- Page Title -->
            <h2 class="text-3xl font-bold text-center text-white mb-8">SETTINGS</h2>

            <div class="space-y-8 max-w-7xl mx-auto">

                <!-- âœ… Username Box & Language Box - Now Separated with Space -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Username Box -->
                    <div class="bg-blue-900 text-white p-6 rounded-xl flex items-center gap-4">
                        <img src="/images/profile_avatar.png" alt="User"
                            class="w-16 h-16 rounded-full border-2 border-white" />
                        <div>
                            <p class="font-semibold text-lg">Username</p>
                            <button class="mt-2 bg-purple-500 hover:bg-purple-600 px-4 py-1 rounded text-sm">Change
                                Photo</button>
                        </div>
                    </div>

                    <!-- Language Box -->
                    <div class="bg-blue-900 text-white p-6 rounded-xl">
                        <label for="language" class="block text-sm mb-2">Language</label>
                        <select id="language" class="w-full px-4 py-2 rounded text-black">
                            <option>English</option>
                            <option>Hindi</option>
                            <option>Spanish</option>
                        </select>
                    </div>
                </div>

                <!-- Password Update -->
                <div class="bg-blue-900 text-white p-6 rounded-xl grid grid-cols-1 md:grid-cols-3 gap-6 items-end">
                    <div>
                        <label class="block text-sm mb-1">Current Password</label>
                        <input type="password" class="w-full px-4 py-2 rounded text-black" />
                    </div>
                    <div>
                        <label class="block text-sm mb-1">New Password</label>
                        <input type="password" class="w-full px-4 py-2 rounded text-black" />
                    </div>
                    <div class="text-center">
                        <button class="bg-purple-500 hover:bg-purple-600 p-3 rounded">
                            <img src="/images/save_icon.png" alt="Save" class="w-6 h-6 mx-auto" />
                        </button>
                    </div>
                </div>

                <!-- Notifications, Delete, Help -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- Notifications -->
                    <div class="bg-blue-900 text-white p-6 rounded-xl text-center">
                        <p class="font-semibold mb-3">Enable/Disable Notifications</p>
                        <div class="flex justify-center items-center gap-2">
                            <span class="text-sm">OFF</span>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" class="sr-only peer" />
                                <div
                                    class="w-11 h-6 bg-gray-300 rounded-full peer peer-checked:bg-green-500 transition duration-300">
                                </div>
                                <div
                                    class="absolute left-1 top-1 w-4 h-4 bg-white rounded-full peer-checked:translate-x-full transition duration-300">
                                </div>
                            </label>
                            <span class="text-sm">ON</span>
                        </div>
                    </div>

                    <!-- Delete Account -->
                    <div class="bg-blue-900 text-white p-6 rounded-xl text-center">
                        <p class="font-semibold mb-3">Delete Account</p>
                        <button class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded">Delete</button>
                    </div>

                    <!-- Help & Support -->
                    <div class="bg-blue-900 text-white p-6 rounded-xl text-center">
                        <p class="font-semibold mb-3">Help & Support</p>
                        <div class="flex justify-center gap-3">
                            <button class="bg-purple-500 hover:bg-purple-600 px-3 py-1 rounded text-sm">FAQs</button>
                            <button class="bg-purple-500 hover:bg-purple-600 px-3 py-1 rounded text-sm">Contact
                                Us</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
</body>

</html>